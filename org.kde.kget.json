                    "sha256": "46d9d2c06637b219270877c9e16155cbd015b6dc84349af064c088e9b5b12f7b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://archives.boost.io/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ],
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ]
        },
        {
            "name": "gpgme",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.24.2.tar.bz2",
                    "sha256": "e11b1a0e361777e9e55f48a03d89096e2abf08c63d84b7017cfe1dce06639581",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1239,
                        "stable-only": true,
                        "url-template": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-$version.tar.bz2"
                    }
                }
            ],
            "cleanup": [
                "/lib/libgpgme*.la",
                "/lib/libqgpgme.la"
            ]
        },
        {
            "name": "libktorrent",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.0/src/libktorrent-25.04.0.tar.xz",
                    "sha256": "f2f27f57d52a8c87306cd6b831904716340502bfd68f6fa2f5d5ae6250ceb464",
                    "x-checker-data": {
