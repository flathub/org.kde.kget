                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.3/src/libktorrent-25.04.3.tar.xz",
                    "sha256": "137a6b14bbdd5121c7afca8e6dad0e52ff7dee80a6e5b54638657f13c06873a8",
