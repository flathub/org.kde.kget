{
    "id": "org.kde.kget",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kget",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-download",
        "--device=dri",
        "--share=network",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
